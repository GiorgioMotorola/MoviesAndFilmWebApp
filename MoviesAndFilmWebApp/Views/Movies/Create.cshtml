@using MoviesAndFilmWebApp.Enums
@model MoviesAndFilmWebApp.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Stars">Starring</label>
                    <input asp-for="Stars" class="form-control" placeholder="Starring">
                    <span asp-validation-for="Stars" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Director">Director</label>
                    <input asp-for="Director" class="form-control" placeholder="Director">
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Writer">Writer</label>
                    <input asp-for="Writer" class="form-control" placeholder="Writer">
                    <span asp-validation-for="Writer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Genre">Genre</label>
                    <input asp-for="Genre" class="form-control" placeholder="Genre">
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="UserRating">User Rating</label>
                    <input asp-for="UserRating" class="form-control" placeholder="Please Select Between 1.0 - 10.0">
                    <span asp-validation-for="UserRating" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Plot">Plot</label>
                    <input asp-for="Plot" class="form-control" placeholder="Plot">
                    <span asp-validation-for="Plot" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="RunTime">Run Time</label>
                    <input asp-for="RunTime" class="form-control" placeholder="Run Time (eg: 2h 20m)">
                    <span asp-validation-for="RunTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="ReleaseYear">Release Year</label>
                    <input asp-for="ReleaseYear" class="form-control" placeholder="Year Released">
                    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MPAARating">Select MPAA Rating</label>
                <select asp-for="MPAARating" asp-items="@Html.GetEnumSelectList<MPAARatingCategory>()">
                    <option>--Select--</option>
                </select>
                <span asp-validation-for="MPAARating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
